rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper Functions
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check file size (max 5MB for images)
    function isValidImageSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }

    // Check content type
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // ========================================
    // Check-in Photos
    // Authenticated users can upload to their own folder
    // ========================================
    match /checkin-photos/{staffId}/{fileName} {
      // Anyone authenticated can read (for display purposes)
      allow read: if isAuthenticated();
      
      // Any authenticated user can upload (staffId is checked in code)
      allow create: if isAuthenticated() && isImage() && isValidImageSize();
      
      // No updates or deletes (immutable for audit purposes)
      allow update, delete: if false;
    }

    // ========================================
    // Default - Deny other paths
    // ========================================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
