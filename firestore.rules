rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========================================
    // CORE HELPER FUNCTIONS
    // ========================================

    // Basic auth check
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user is staff (has staff document)
    function isStaff() {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/staff/$(request.auth.uid));
    }

    // Get staff document data
    function getStaffData() {
      return get(/databases/$(database)/documents/staff/$(request.auth.uid)).data;
    }

    // Get staff position
    function getPosition() {
      return getStaffData().position;
    }

    // Check if user has specific position(s)
    function hasPosition(positions) {
      return isStaff() && getPosition() in positions;
    }

    // ========================================
    // ROLE CHECK FUNCTIONS
    // ========================================

    // Admin check (full access) - position-based
    function isAdmin() {
      return hasPosition(['Quản lý (Admin)', 'Quản trị viên', 'Quản lý', 'Admin']);
    }

    // Teacher roles (Đào Tạo)
    function isTeacher() {
      return hasPosition([
        'Giáo Viên Việt', 'Giáo viên Việt', 'GV Việt', 'Giáo viên',
        'Giáo Viên Nước Ngoài', 'Giáo viên nước ngoài', 'GV Ngoại', 'GV NN', 'GVNN',
        'Trợ Giảng', 'Trợ giảng', 'TG'
      ]);
    }

    // Office staff (Văn Phòng) - CSKH
    function isCSKH() {
      return hasPosition([
        'Trưởng Nhóm CSKH', 'NV CSKH', 'Tư vấn viên', 'Lễ tân', 'CSKH', 'Nhân viên'
      ]);
    }

    // Office staff (Văn Phòng) - CM (Chuyên Môn)
    function isCM() {
      return hasPosition([
        'Trưởng Nhóm CM', 'Trưởng Nhóm Học Thuật', 'Trưởng Nhóm Chuyên Môn', 'CM Leader',
        'NV CM', 'NV Chuyên Môn'
      ]);
    }

    // Office staff (Văn Phòng) - Sale
    function isSale() {
      return hasPosition([
        'Trưởng Nhóm Sale', 'NV Sale', 'Sale'
      ]);
    }

    // Accountant (Kế Toán)
    function isKeToan() {
      return hasPosition(['Kế toán', 'Kế Toán']);
    }

    // Team Lead check (can approve)
    function isTeamLead() {
      return hasPosition([
        'Quản lý (Admin)', 'Quản trị viên', 'Quản lý', 'Admin',
        'Trưởng Nhóm CSKH', 'Trưởng Nhóm CM', 'Trưởng Nhóm Sale'
      ]);
    }

    // ========================================
    // PERMISSION CHECK FUNCTIONS
    // ========================================

    // Can see finance data (contracts, invoices, revenue, debt)
    // Note: CM staff CANNOT see finance
    function canSeeFinance() {
      return isAdmin() || isKeToan() || isCSKH() || isSale();
    }

    // Can see revenue data - Only admin, ketoan, and team leads
    function canSeeRevenue() {
      return isAdmin() || isKeToan() || isTeamLead();
    }

    // Can manage staff
    function canManageStaff() {
      return isAdmin();
    }

    // Can manage settings
    function canManageSettings() {
      return isAdmin();
    }

    // Can see leads/campaigns (Kinh Doanh)
    // Note: CM staff CANNOT see Kinh Doanh
    function canSeeKinhDoanh() {
      return isAdmin() || isCSKH() || isSale();
    }

    // Office staff (non-teacher)
    function isOfficeStaff() {
      return isCSKH() || isCM() || isSale() || isKeToan();
    }

    // ========================================
    // DATA ISOLATION HELPERS
    // ========================================

    // Check if teacher owns class (for onlyOwnClasses)
    function teacherOwnsClass(classId) {
      let classDoc = get(/databases/$(database)/documents/classes/$(classId)).data;
      let staffId = request.auth.uid;
      return classDoc.teacherId == staffId ||
             classDoc.assistantId == staffId ||
             (classDoc.teacherIds != null && staffId in classDoc.teacherIds);
    }

    // Check if accessing own data
    function isOwnData(docStaffId) {
      return request.auth.uid == docStaffId;
    }

    // ========================================
    // FIELD VALIDATION HELPERS
    // ========================================

    // Check if field is non-empty string
    function isNonEmptyString(field) {
      return field is string && field.size() > 0;
    }

    // Check if field is valid number (>=0)
    function isNonNegativeNumber(field) {
      return field is number && field >= 0;
    }

    // Check if data has required fields
    function hasRequiredFields(data, fields) {
      return data.keys().hasAll(fields);
    }

    // ========================================
    // COLLECTION-SPECIFIC VALIDATORS
    // ========================================

    // Staff collection validator
    function isValidStaffData(data) {
      return hasRequiredFields(data, ['name', 'position', 'status']) &&
             isNonEmptyString(data.name) &&
             isNonEmptyString(data.position) &&
             data.status in ['Active', 'Inactive'];
    }

    // Student collection validator
    function isValidStudentData(data) {
      return hasRequiredFields(data, ['fullName', 'status']) &&
             isNonEmptyString(data.fullName) &&
             data.status in ['Đang học', 'Nợ phí', 'Nợ hợp đồng', 'Bảo lưu', 'Nghỉ học', 'Học thử', 'Đã học hết phí'];
    }

    // Contract collection validator
    function isValidContractData(data) {
      return hasRequiredFields(data, ['studentId', 'totalAmount']) &&
             isNonEmptyString(data.studentId) &&
             isNonNegativeNumber(data.totalAmount);
    }

    // Invoice collection validator
    function isValidInvoiceData(data) {
      return hasRequiredFields(data, ['amount']) &&
             isNonNegativeNumber(data.amount);
    }

    // WorkSession collection validator
    function isValidWorkSessionData(data) {
      return hasRequiredFields(data, ['date']) &&
             isNonEmptyString(data.date);
    }

    // Students collection
    match /students/{studentId} {
      allow read: if isStaff();
      allow create: if isStaff() && isValidStudentData(request.resource.data);
      allow update: if isStaff() && isValidStudentData(request.resource.data);
      allow delete: if isStaff();
    }
    
    // Classes collection
    match /classes/{classId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }
    
    // ========================================
    // HR - Mostly office staff or self-access
    // ========================================

    // #7 Staff - self or admin/teamlead only
    match /staff/{staffId} {
      // Allow user to read own doc (for auth) + admin/teamlead can read all
      allow read: if isAuthenticated() &&
        (request.auth.uid == staffId || isAdmin() || isTeamLead());
      allow create: if isAdmin() && isValidStaffData(request.resource.data);
      allow update: if isAdmin() && isValidStaffData(request.resource.data);
      allow delete: if isAdmin();
    }
    
    // ========================================
    // CUSTOMER - hideParentPhone, hide enrollments from teachers
    // ========================================

    // #17 Parents - office only (hide from teachers)
    match /parents/{parentId} {
      allow read: if isOfficeStaff() || isAdmin();
      allow write: if isOfficeStaff() || isAdmin();
    }
    
    // Attendance collection
    match /attendance/{attendanceId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }
    
    // Student Attendance collection
    match /studentAttendance/{docId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }
    
    // Attendance Audit Log collection (lịch sử sửa đổi điểm danh)
    match /attendanceAuditLog/{logId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }
    
    // Tutoring collection
    match /tutoring/{tutoringId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }
    
    // ========================================
    // FINANCE - canSeeFinance() = Admin, KeToan, CSKH, Sale (NOT CM, NOT Teachers)
    // ========================================

    // Contracts collection
    match /contracts/{contractId} {
      allow read: if canSeeFinance();
      allow create: if canSeeFinance() && isValidContractData(request.resource.data);
      allow update: if canSeeFinance() && isValidContractData(request.resource.data);
      allow delete: if isAdmin();
    }
    
    // ========================================
    // BUSINESS - canSeeKinhDoanh() = Admin, CSKH, Sale (NOT CM, NOT Teachers, NOT KeToan)
    // ========================================

    // Leads collection (Customer Database)
    match /leads/{leadId} {
      allow read: if canSeeKinhDoanh();
      allow create: if canSeeKinhDoanh();
      allow update: if canSeeKinhDoanh();
      allow delete: if isAdmin();
    }

    // Campaigns collection - stricter: only team leads can create/update
    match /campaigns/{campaignId} {
      allow read: if canSeeKinhDoanh();
      allow create: if isTeamLead() || isAdmin();
      allow update: if isTeamLead() || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Invoices collection
    match /invoices/{invoiceId} {
      allow read: if canSeeFinance();
      allow create: if canSeeFinance() && isValidInvoiceData(request.resource.data);
      allow update: if canSeeFinance() && isValidInvoiceData(request.resource.data);
      allow delete: if isAdmin();
    }
    
    // Feedback collection
    match /feedback/{feedbackId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }
    
    match /feedbacks/{feedbackId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }
    
    // #18 Enrollments - office only
    match /enrollments/{enrollmentId} {
      allow read: if isOfficeStaff() || isAdmin();
      allow write: if isOfficeStaff() || isAdmin();
    }
    
    // Class Sessions collection
    match /classSessions/{sessionId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }
    
    // #8 Work Sessions - office only (teachers don't do work confirmation)
    match /workSessions/{sessionId} {
      allow read: if isOfficeStaff() || isAdmin();
      allow create: if (isOfficeStaff() || isAdmin()) && isValidWorkSessionData(request.resource.data);
      allow update: if (isOfficeStaff() || isAdmin()) && isValidWorkSessionData(request.resource.data);
      allow delete: if isOfficeStaff() || isAdmin();
    }
    
    // ========================================
    // SETTINGS - All staff read, Admin write
    // ========================================

    // #20a Settings
    match /settings/{settingId} {
      allow read: if isStaff();
      allow write: if isAdmin();
    }
    
    // #20e Curriculums
    match /curriculums/{curriculumId} {
      allow read: if isStaff();
      allow write: if isAdmin();
    }
    
    // Rooms collection
    match /rooms/{roomId} {
      allow read: if isStaff();
      allow write: if isAdmin();
    }
    
    // Branches collection
    match /branches/{branchId} {
      allow read: if isStaff();
      allow write: if isAdmin();
    }
    
    // #20d Centers
    match /centers/{centerId} {
      allow read: if isStaff();
      allow write: if isAdmin();
    }
    
    // Financial Transactions (Revenue) - stricter: canSeeRevenue() = Admin, KeToan, TeamLeads only
    match /financialTransactions/{transactionId} {
      allow read: if canSeeRevenue();
      allow write: if canSeeRevenue();
    }
    
    // ========================================
    // SALARY - onlyOwnData unless admin/ketoan
    // ========================================

    // #12 Staff Salaries - self or admin/ketoan
    match /staffSalaries/{salaryId} {
      allow read: if isAdmin() || isKeToan() ||
        resource.data.staffId == request.auth.uid;
      allow write: if isAdmin() || isKeToan();
    }

    // #13 Actual Salaries - self or admin/ketoan
    match /actualSalaries/{docId} {
      allow read: if isAdmin() || isKeToan() ||
        resource.data.staffId == request.auth.uid;
      allow write: if isAdmin() || isKeToan();
    }

    // #14 Monthly Salary Summary - self or admin/ketoan
    match /monthlySalarySummary/{docId} {
      allow read: if isAdmin() || isKeToan() ||
        resource.data.staffId == request.auth.uid;
      allow write: if isAdmin() || isKeToan();
    }

    // #15 Salary Rules - admin/ketoan only
    match /salaryRules/{ruleId} {
      allow read: if isAdmin() || isKeToan();
      allow write: if isAdmin();
    }

    // #16 Salary Ranges - admin/ketoan only
    match /salaryRanges/{rangeId} {
      allow read: if isAdmin() || isKeToan();
      allow write: if isAdmin();
    }

    // Reward/Penalty records
    match /rewardPenalties/{docId} {
      allow read: if isStaff();
      allow write: if isAdmin();
    }

    // #9 Staff Attendance - office only
    match /staffAttendance/{docId} {
      allow read: if isOfficeStaff() || isAdmin();
      allow write: if isOfficeStaff() || isAdmin();
    }
    
    // Holidays collection
    match /holidays/{holidayId} {
      allow read: if isStaff();
      allow write: if isAdmin();
    }
    
    // #20b Products
    match /products/{productId} {
      allow read: if isStaff();
      allow write: if isAdmin();
    }
    
    // #20c Discounts
    match /discounts/{discountId} {
      allow read: if isStaff();
      allow write: if isAdmin();
    }
    
    // Homework Records collection
    match /homeworkRecords/{recordId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }
    
    // #19 Monthly Comments - office only
    match /monthlyComments/{commentId} {
      allow read: if isOfficeStaff() || isAdmin();
      allow write: if isOfficeStaff() || isAdmin();
    }
    
    // Birthday Gifts collection (tracking quà sinh nhật)
    match /birthdayGifts/{giftId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }
    
    // Staff Reward & Penalty collections (thưởng/phạt nhân sự)
    match /staffRewardPenalty/{recordId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }
    
    match /rewardPenaltyConfig/{configId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }
    
    // Homework & Comments collections (bài tập, nhận xét)
    match /homeworkRecords/{recordId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }
    
    match /testComments/{commentId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }

    match /homeworkStatuses/{statusId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }

    // Test Templates collection (mẫu nhận xét theo lớp)
    match /testTemplates/{templateId} {
      allow read: if isStaff();
      allow write: if isStaff();
    }

    // Settlement Invoices collection (hóa đơn tất toán nợ phí) - FINANCE
    match /settlementInvoices/{invoiceId} {
      allow read: if canSeeFinance();
      allow create: if canSeeFinance();
      allow update: if canSeeFinance();
      allow delete: if isAdmin();
    }

    // #10 Leave Requests - all create own, teamlead approve
    match /leaveRequests/{requestId} {
      allow read: if isStaff();
      allow create: if isStaff();
      // Can update if: teamlead/admin OR own request while pending
      allow update: if isTeamLead() || isAdmin() ||
        (resource.data.staffId == request.auth.uid &&
         resource.data.status == 'Chờ duyệt');
      allow delete: if isAdmin();
    }

    // #11 Leave Balances - self or admin
    match /leaveBalances/{balanceId} {
      allow read: if isAdmin() || resource.data.staffId == request.auth.uid;
      allow write: if isAdmin();
    }

    // ========================================
    // CHECKIN - Staff check-in with WiFi IP verification
    // ========================================

    // Allowed WiFi configurations - Admin only
    match /allowedWifis/{wifiId} {
      allow read: if isStaff();  // All staff can read to verify their IP
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Staff Check-in records - self or admin
    match /staffCheckIns/{checkInId} {
      // Staff can read own check-ins, admin can read all
      allow read: if isAdmin() || resource.data.staffId == request.auth.uid;
      // Staff can create/update own check-ins
      allow create: if isStaff() && request.resource.data.staffId == request.auth.uid;
      allow update: if isStaff() && resource.data.staffId == request.auth.uid;
      // Only admin can delete
      allow delete: if isAdmin();
    }

    // Default: deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
